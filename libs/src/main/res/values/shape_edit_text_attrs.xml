<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="ShapeEditText">
        <!-- Radius -->
        <attr name="cornerRadius" />
        <attr name="topLeftRadius" />
        <attr name="topRightRadius" />
        <attr name="bottomLeftRadius" />
        <attr name="bottomRightRadius" />

        <!-- Solid -->
        <attr name="solidColor" />

        <!-- Stroke -->
        <attr name="strokeWidth" />
        <attr name="strokeDashWidth" />
        <attr name="strokeDashGap" />
        <attr name="strokeColor" />

        <!-- Gradient -->
        <attr name="gradientType" />
        <attr name="gradientStartColor" />
        <attr name="gradientCenterColor" />
        <attr name="gradientEndColor" />
        <attr name="gradientRadius" />
        <attr name="gradientX" />
        <attr name="gradientY" />
        <attr name="gradientOrientation" />

        <!-- Clip -->
        <attr name="useClip" />

        <!-- Shadow -->
        <attr name="shadow_x_offset" />
        <attr name="shadow_y_offset" />
        <attr name="shadowBlur" />
        <attr name="shadowSpread" />
        <attr name="shadowColor" />
        <attr name="shadowInset" />

    </declare-styleable>

</resources>